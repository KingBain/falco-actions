{
	"name": "Ubuntu(DCO Enabled)",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers-community/npm-features/prettier:1": {}
	},

	"postCreateCommand": "git config --local commit.template .gitmessage && sed -i \"s|\\$GIT_AUTHOR_NAME|$(git config user.name)|g; s|\\$GIT_AUTHOR_EMAIL|$(git config user.email)|g\" .gitmessage && echo 'âœ… Git commit template configured with your name and email!'"
}